<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/transparent_bg">

    <!--including the toobar-->
    <include layout="@layout/toolbar" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Go To Welcome Screen"
        android:layout_below="@id/img"/>

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-24dp"
        android:background="@drawable/rectangle_3"
        />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="266dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-9dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle_3"
        />

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="2dp"
        android:src="@drawable/dase"></ImageView>


    <View
        android:id="@+id/rectangle_3"
        android:layout_width="147dp"
        android:layout_height="72dp"

        android:layout_above="@+id/rectangle_7"
        android:layout_below="@+id/button"
        android:layout_alignEnd="@+id/rectangle_7"
        android:layout_alignRight="@+id/rectangle_7"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="-7dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rectangle_3" />

    <View
        android:id="@+id/rectangle_7"
        android:layout_width="147dp"
        android:layout_height="72dp"

        android:layout_above="@+id/rectangle_8"
        android:layout_alignEnd="@+id/rectangle_8"
        android:layout_alignRight="@+id/rectangle_8"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rectangle_3" />

    <View
        android:id="@+id/rectangle_8"
        android:layout_width="147dp"
        android:layout_height="72dp"

        android:layout_above="@+id/rectangle_9"
        android:layout_alignEnd="@+id/rectangle_9"
        android:layout_alignRight="@+id/rectangle_9"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/rectangle_3" />

    <View
        android:id="@+id/rectangle_9"
        android:layout_width="147dp"
        android:layout_height="72dp"

        android:layout_above="@+id/rectangle_1"
        android:layout_alignEnd="@+id/rectangle_1"

        android:layout_alignRight="@+id/rectangle_1"

        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/rectangle_3" />


</RelativeLayout>
